{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": "airbnb-base",
  "overrides": [
    {
      "files": ["*js", "*mjs"]
    }
  ],
  "plugins": ["prettier"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "ecmaFeatures": {
      "modules": true,
      "arrowFunctions": true,
      "destructuring": true
    }
  },
  "rules": {
    "quotes": ["error", "double"],
    "indent": "off",
    "linebreak-style": "off",
    "operator-linebreak": "off",
    "import/no-extraneous-dependencies": "off",
    "no-console": "off",
    "consistent-return": "off",
    "implicit-arrow-linebreak": "off",
    "no-shadow": "off",
    "prettier/prettier": [
      "error",
      {
        "semi": true,
        "tabWidth": 2,
        "printWidth": 80,
        "singleQuote": false,
        "endOfLine": "auto"
      }
    ]
  }
}
