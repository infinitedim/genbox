{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["airbnb-base", "prettier"],
  "overrides": [
    {
      "files": ["*.js"]
    }
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "ecmaFeatures": {
      "arrowFunctions": true
    }
  },
  "plugins": ["prettier"],
  "rules": {
    "quotes": ["error", "double"],
    "no-param-reassign": "off",
    "prettier/prettier": [
      "error",
      {
        "tabWidth": 2,
        "endOfLine": "auto"
      }
    ]
  }
}
